<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Work Schedule</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/cssrest")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Work Schedule", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Home Page", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Schedule", "Personal", "Schedules", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Team", "Team", "Schedules", null, new { @class = "nav-link" })
                </li>
                @if (Session["UserRoleName"].ToString().Contains("Moderator") || Session["UserRoleName"].ToString().Contains("Admin"))
    {
            <li class="nav-item">
                @Html.ActionLink("Planning", "Index", "Schedules", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Reports", "Index", "Report", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Configuration", "Config", "Home", null, new { @class = "nav-link" })
            </li>
}
                <li class="nav-item">
                    <a class="nav-link" href="/Doc/Instruction.pdf">Help</a>
                </li>
            </ul>
            <p class="nav navbar-text navbar-right">Hi, user @Session["UserFullName"].ToString() ! Department: @Session["UserDepName"].ToString()</p>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - pawelpastucha.pl</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>